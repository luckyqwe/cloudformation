apiVersion: apps/v1
kind: Deployment
metadata:
  name: dep1
  labels: 
    app: nb
spec:
  replicas: 4
  selector:
    matchLabels:
      app: nb
  strategy:
    type:  RollingUpdate
    rollingUpdate:
      maxSurge:  1
      maxUnavailable:  3
  template:
    metadata: 
      labels: 
        app: nb
    spec:
      containers: 
        - name: c1
          image: nginx:stable-perl